<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="fxVBox" minHeight="200.0" minWidth="350.0" prefHeight="180.0" prefWidth="350.0" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.andreldm.usb_barcode_reader.server.ui.controllers.MainController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Label fx:id="fxLabelStatus" text="%label.server.not.running" textFill="RED" wrapText="true">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <Label fx:id="fxLabelDevice" text="%label.device.none" textFill="RED" wrapText="true">
         <padding>
            <Insets bottom="5.0" />
         </padding>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <Separator orientation="VERTICAL" visible="false" VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER" VBox.vgrow="NEVER">
         <children>
            <Button fx:id="fxButtonToggleServer" alignment="CENTER" mnemonicParsing="false" onAction="#handleToggleServer" text="%button.start" />
         </children>
      </HBox>
   </children>
</VBox>
